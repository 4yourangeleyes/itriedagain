        {viewMode === 'Draft' ? 
            <input value={profile.companyName} onChange={e => setProfile({...profile, companyName: e.target.value})} className="text-xl font-bold tracking-widest uppercase bg-transparent w-1/2 focus:bg-gray-50 p-1" placeholder="Company Name" />
